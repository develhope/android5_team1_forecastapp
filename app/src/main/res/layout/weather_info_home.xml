<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/weather_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_card"
        android:layout_width="342dp"
        android:layout_height="155dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_18"
            android:layout_marginTop="@dimen/margin_18"
            android:textColor="@color/white"
            android:gravity="top"
            android:text="@string/oggi" />

        <TextView
            android:id="@+id/tempmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_153"
            android:layout_marginTop="@dimen/margin_18"
            android:gravity="top"
            android:text="@string/tempmin"/>

        <TextView
            android:id="@+id/tempmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_245"
            android:layout_marginTop="@dimen/margin_18"
            android:gravity="top"
            android:text="@string/tempmax" />

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_18"
            android:layout_marginTop="@dimen/margin_43"
            android:gravity="top"
            android:text="@string/data" />

        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_153"
            android:layout_marginTop="@dimen/margin_43"
            android:gravity="top"
            android:text="@string/min" />

        <TextView
            android:id="@+id/max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_245"
            android:layout_marginTop="@dimen/margin_43"
            android:gravity="top"
            android:text="@string/max" />

        <ImageView
            android:id="@+id/imageHome"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_18"
            android:layout_marginTop="@dimen/margin_85"
            android:layout_marginBottom="@dimen/margin_18" />

        <TextView
            android:id="@+id/umidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_153"
            android:layout_marginTop="@dimen/margin_88"
            android:gravity="top"
            android:text="@string/rain" />

        <TextView

            android:id="@+id/precip_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_153"
            android:layout_marginTop="@dimen/margin_115"
            android:layout_marginEnd="@dimen/margin_18"
            android:gravity="top"
            android:text="@string/precip_"/>

        <TextView
            android:id="@+id/kmh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_245"
            android:layout_marginTop="@dimen/margin_88"
            android:layout_marginEnd="@dimen/margin_18"
            android:gravity="top"
            android:text="@string/kmh" />

        <TextView
            android:id="@+id/vento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/margin_245"
            android:layout_marginTop="@dimen/margin_115"
            android:layout_marginEnd="@dimen/margin_18"
            android:gravity="top"
            android:text="@string/vento_home" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
