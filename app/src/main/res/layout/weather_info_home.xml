<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="@drawable/frame_home">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="18dp"
                android:paddingTop="18dp"
                android:text="Oggi"
                android:textColor="@color/white"
                android:textSize="@dimen/weekday_home" />
            <TextView
                android:id="@+id/weather_info_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:paddingStart="18dp"
                android:paddingTop="3dp"
                android:paddingEnd="18dp"
                android:text="10/09"
                android:textColor="@color/white"
                android:textSize="@dimen/date_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:paddingTop="18dp"
                android:text="22°"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:paddingTop="3dp"
                android:text="min"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:text="31°"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:paddingTop="3dp"
                android:text="max"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:text="12kmh"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="72dp"
                android:paddingTop="3dp"
                android:text="vento"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather_info_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:text="0 mm"
                android:textColor="@color/white"
                android:textSize="@dimen/big_text_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:text="precip."
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_home" />

        </LinearLayout>
        <ImageView
            android:id="@+id/weather_info_icon"
            android:src="@drawable/sun"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            />
    </GridLayout>

</FrameLayout>