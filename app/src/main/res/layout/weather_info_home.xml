<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10dp"
        android:background="@drawable/frame_home">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_40dp"
                android:layout_marginStart="@dimen/_18dp"
                android:paddingTop="@dimen/_18dp"
                android:text="@string/oggi"
                android:textColor="@color/white"
                android:textSize="@dimen/_24sp" />
            <TextView
                android:id="@+id/weather_info_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_40dp"
                android:paddingStart="@dimen/_18dp"
                android:paddingTop="@dimen/_18dp"
                android:paddingEnd="@dimen/_18dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_72dp"
                android:paddingTop="@dimen/_18dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_40dp"
                android:paddingTop="@dimen/_3dp"
                android:text="@string/min"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_18dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_72dp"
                android:paddingTop="@dimen/_18dp"
                android:text="@string/max"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_info_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_18dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_72dp"
                android:paddingTop="@dimen/_3dp"
                android:text="@string/vento"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather_info_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_18dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_3dp"
                android:text="@string/precip"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>
        <ImageView
            android:id="@+id/weather_info_icon"
            android:src="@drawable/sun"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginStart="@dimen/_18dp"
            android:layout_marginTop="@dimen/_18dp" />
    </GridLayout>

</FrameLayout>