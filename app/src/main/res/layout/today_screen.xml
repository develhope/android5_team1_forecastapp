<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0EFFF"
    android:overScrollMode="always"
    >
<LinearLayout
    android:id="@+id/home_screen_first"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="70dp"
    >

    <TextView
        android:id="@+id/palermo_sic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="24dp"
        android:text="@string/palermo_sic"
        android:textAppearance="@style/palermo_sic"
        />


    <TextView
        android:id="@+id/oggi_domeni"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:text="@string/oggi_domeni"
        android:textAppearance="@style/oggi_domeni" />



</LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/todayRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:itemCount="5"
    />



</LinearLayout>